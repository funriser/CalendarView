<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CalendarView">
        <!-- Month header customization -->
        <attr name="textMonthSize" format="dimension"/>
        <attr name="textMonthMargin" format="dimension"/>
        <attr name="textMonthColor" format="color" />
        <!-- Arrows customization -->
        <attr name="arrowsSize" format="dimension"/>
        <attr name="arrowsColor" format="color" />
        <attr name="arrowsSideMargin" format="dimension" />
        <!-- Day of month text customization -->
        <attr name="textDaySize" format="dimension"/>
        <attr name="textDayColor" format="color"/>
        <attr name="textDayColorSelected" format="color"/>
        <attr name="selectionColor" format="color"/>
        <attr name="highlightColor" format="color"/>
        <attr name="paddingSelection" format="dimension"/>
        <!-- Day of week text customization -->
        <attr name="textWeekdaySize" format="dimension"/>
        <attr name="textWeekdayColor" format="color"/>
        <attr name="marginWeekdayTop" format="dimension"/>
    </declare-styleable>
</resources>